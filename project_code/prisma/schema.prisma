generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// model table
model User {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String @unique
  password String
  identity UserRole
}

model Course {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name String
  description String
  comments String[]
  thumbnail String
}

model StudentProfile {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  thumbnail      String? 
  email          String  @unique
  username       String  
  phone          String? 
  address        String? 
  timeZone       String? 
  biography      String? 
  accountBalance String? 
}

enum UserRole {
  student
  tutor
  siteAdmin
  tutorAdmin
}





